<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBigText">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#1D1D26</item>
    </style>

    <style name="BackgroundLittleText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorNoSelectableRecord</item>
    </style>

    <style name="TextHintInputView" parent="BackgroundLittleText">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="EditTextInputView" parent="TitleLittleText"/>

    <style name="TitleLittleText" parent="TitleBigText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ErrorInputText" parent="BackgroundLittleText">
        <item name="android:textColor">@color/colorErrorInputText</item>
    </style>

</resources>
